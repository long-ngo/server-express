extends ../layouts/common

block content
    h1 Login
    if error
        .alert.alert-danger= error

    form(action="/auth/login", method="post")
        .form-group
            label(for="email") Email
            input#email.form-control(type="email", name="email", value= value ? value.email : "")
        .form-group
            label(for="password") Password
            input#password.form-control(type="password", name="password", value= value ? value.password : "")
        button.btn.btn-primary Login