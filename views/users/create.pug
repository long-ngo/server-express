extends ../layouts/common

block content
    h1 Create user

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="post", enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text", name="name", value= value ? value.name: "")
        .form-group
            label(for="phone") Phone
            input#phone.form-control(type="text", name="phone", value= value ? value.phone: "")
        .form-group
            label(for="avatar") File
            input#avatar.form-control-file(type="file", name="avatar")
        button.btn.btn-primary Create
