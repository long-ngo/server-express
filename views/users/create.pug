extends ../layouts/common

block content
    h1 Create user

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="post")
        .form-group
            label(for="inputName") Name
            input#inputName.form-control(type="text", name="name", value= value ? value.name : "")
        .form-group
            label(for="inputPhone") Phone
            input#inputPhone.form-control(type="text", name="phone", value= value ? value.phone : "")
        button.btn.btn-primary Create
